<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/retrun_business"
        app:cardCornerRadius="@dimen/dimen_15dp"
        android:layout_margin="@dimen/dimen_30dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardElevation="@dimen/dimen_15dp"
        app:cardBackgroundColor="@color/write">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.fangfas.alincebusinessdaojobs.View.CircleImageView
            android:id="@+id/header_mage"
            android:transitionName="robot"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:src="@mipmap/demo"
            android:layout_width="@dimen/dimen_90dp"
            app:border_width="0dp"
            android:layout_height="@dimen/dimen_90dp" />

            <TextView
                android:layout_marginLeft="@dimen/dimen_90dp"
                android:textSize="14sp"
                android:textColor="@color/heise"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_150dp"
                android:gravity="center"
                android:id="@+id/name"
                android:layout_toEndOf="@+id/header_mage"
                android:layout_marginStart="@dimen/dimen_33dp" />

            <TextView
                android:id="@+id/tx_tel"
               android:textStyle="normal"
                android:textSize="@dimen/txtsize_39sp"
                android:textColor="@color/hui2"
                style="@style/text"
                android:layout_alignBaseline="@+id/name"
                android:layout_alignBottom="@+id/name"
                android:layout_toEndOf="@+id/name"
                android:layout_marginStart="@dimen/dimen_30dp" />
            <LinearLayout
                android:layout_marginTop="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_60dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                style="@style/text">

                <TextView
                    android:textColor="@color/hui"
                    android:drawablePadding="@dimen/dimen_15dp"
                    android:textSize="@dimen/txtsize_30sp"
                    android:drawableLeft="@mipmap/balance"
                    android:text="@string/balance_text"
                   style="@style/text"
                    android:id="@+id/textView2" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_account"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/txtsize_44sp"
                    style="@style/text"/>
                    <TextView
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:textColor="@color/hui"
                        android:textSize="@dimen/txtsize_36sp"
                        android:text="@string/price_rmb"
                       style="@style/text" />
                </LinearLayout>
            </LinearLayout>
            
            <TextView
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_centerVertical="true"
                android:background="@color/hui6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/textView3" />

            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="@dimen/dimen_39dp"
                android:orientation="horizontal"
               style="@style/text">
            <TextView
                android:text="@string/str_count"
                android:textColor="@color/hui2"
                android:textSize="@dimen/txtsize_39sp"
               style="@style/text"
                />
                <TextView
                    android:textColor="@color/hui2"
                    android:textSize="@dimen/txtsize_36sp"
                    style="@style/text"
                    android:id="@+id/count" />
            </LinearLayout>

            <TextView
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/txtsize_36sp"
               style="@style/text"
                android:layout_alignBaseline="@+id/attractmoney"
                android:layout_alignBottom="@+id/attractmoney"
                android:layout_toEndOf="@+id/attractmoney"
                android:id="@+id/attract_moneys" />
            <TextView
                android:id="@+id/yuan_text"
                android:layout_alignBaseline="@+id/attract_moneys"
                android:layout_alignBottom="@+id/attract_moneys"
                android:layout_toEndOf="@+id/attract_moneys"
                android:textColor="@color/hui"
                android:text="@string/price_rmb"
                android:textSize="@dimen/txtsize_36sp"
                style="@style/text" />

            <LinearLayout
                android:layout_marginRight="@dimen/dimen_60dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/yuan_text"
                android:orientation="horizontal"
               style="@style/text">
            <TextView
                android:textColor="@color/hui2"
                android:textSize="@dimen/txtsize_36sp"
                android:text="@string/percentage"
                style="@style/text" />
                <TextView
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/txtsize_36sp"
                android:id="@+id/tx_ticheng"
                style="@style/text" />
                <TextView
                    android:textColor="@color/hui"
                    android:textSize="@dimen/txtsize_36sp"
                    android:text="@string/price_rmb"
                    style="@style/text" />
            </LinearLayout>

            <TextView
                android:textSize="@dimen/txtsize_36sp"
                android:textColor="@color/hui2"
                android:text="@string/attract_money"
               style="@style/text"
                android:id="@+id/attractmoney"
                android:layout_alignBaseline="@+id/ll_count"
                android:layout_alignBottom="@+id/ll_count"
                android:layout_toEndOf="@+id/ll_count"
                android:layout_marginStart="@dimen/dimen_90dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>