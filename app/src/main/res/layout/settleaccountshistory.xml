<?xml version="1.0" encoding="utf-8"?>
<!--app:igone="all"忽略警告-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_90dp"
        android:layout_marginRight="@dimen/dimen_90dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/write"
        app:cardCornerRadius="@dimen/dimen_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/title"
            android:text="@string/strettle_accounts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120dp"
            android:textColor="@color/heise"
            android:gravity="center"
            android:visibility="visible" />
        <TextView
            style="@style/transverse_line" />
       <LinearLayout
        android:id="@+id/content"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_600dp"/>
       </LinearLayout>

        <TextView
            style="@style/transverse_line" />

            <Button
                android:gravity="right|center_vertical"
                android:text="@string/str_close"
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:background="@drawable/ripple"
                android:layout_marginRight="@dimen/dimen_60dp"
                />



    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>