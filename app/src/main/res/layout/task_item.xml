<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300dp">
        <LinearLayout
            android:background="@color/huis"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_300dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_margin="@dimen/dimen_24dp"
                app:cardCornerRadius="@dimen/dimen_18dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/write"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:textColor="@color/bule2"
                        android:textSize="@dimen/txtsize_39sp"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:layout_marginLeft="@dimen/dimen_210dp"
                        android:text="泸州老窖特曲500ml 52度"
                        style="@style/text" />

                    <TextView
                        android:id="@+id/text_category"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="@dimen/dimen_30dp"
                        android:layout_marginTop="@dimen/dimen_30dp"
                        android:textSize="@dimen/txtsize_36sp"
                        android:textColor="@color/hui2"
                        android:text="招商地区:成都、北京、上海"
                        style="@style/text" />
                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_below="@+id/text_category"
                        android:layout_marginLeft="@dimen/dimen_30dp"
                        android:layout_marginTop="@dimen/dimen_15dp"
                        android:orientation="horizontal"
                       style="@style/text">
                        <TextView
                            android:text="@string/receive_numberof"
                            android:textSize="@dimen/txtsize_36sp"
                            android:textColor="@color/hui2"
                          style="@style/text" />
                        <TextView
                            android:textColor="@color/blue"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:text="32"
                            android:textSize="@dimen/txtsize_36sp"
                            style="@style/text" />
                        <TextView
                            android:layout_marginLeft="@dimen/dimen_20dp"
                            android:text="@string/attract_investment_number"
                            android:textSize="@dimen/txtsize_36sp"
                            android:textColor="@color/hui2"
                            style="@style/text"/>
                        <TextView
                            android:id="@+id/attract_investment_number"
                            android:textColor="@color/blue"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:text="32"
                            android:textSize="@dimen/txtsize_36sp"
                            style="@style/text" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/text_category"
                        android:layout_marginRight="@dimen/dimen_120dp"
                        android:orientation="horizontal"
                        style="@style/text">
                        <TextView
                            android:text="5"
                            android:textColor="@color/orange"
                            android:textSize="18sp"
                           style="@style/text"
                            />
                        <TextView
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:text="@string/price"
                            android:textSize="@dimen/txtsize_36sp"
                            android:textColor="@color/blue3"
                           style="@style/text" />
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="@dimen/dimen_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/ll"
                        android:textColor="@color/hui"
                        android:textSize="12sp"
                        android:text="编码：20161011-0001"
                        style="@style/text" />
                </RelativeLayout>


                <ImageView
                    android:layout_gravity="right"
                    android:src="@mipmap/zhiding"
                   style="@style/text"
                    android:id="@+id/sticky" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="@dimen/dimen_45dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
           style="@style/text">
            <TextView
                android:id="@+id/yellow"
                android:textSize="@dimen/txtsize_36sp"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/write"
                android:text="@string/advertisement_attractinvestment"
                android:background="@mipmap/lhsd_yellow"
                style="@style/text"
                />
            <TextView
                android:id="@+id/green"
                android:textSize="@dimen/txtsize_36sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/write"
                android:text="@string/other_attractinvestment"
                android:background="@mipmap/lhsd_green"
               style="@style/text"
                />
            <TextView
                android:id="@+id/blue"
                android:textSize="@dimen/txtsize_36sp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/write"
                android:text="@string/product_attractinvestment"
                android:background="@mipmap/lhsd_blue"
               style="@style/text"
                />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>