<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/write"
    android:id="@+id/ll"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/write"
        android:paddingLeft="@dimen/dimen_15dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/returns"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/return_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_title"
            android:textColor="@color/black"
            android:textSize="@dimen/txtsize_42sp"
            android:layout_centerInParent="true"
            style="@style/text" />
        <TextView
            android:layout_alignParentBottom="true"
            style="@style/transverse_line" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/hui9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--支付宝-->
    <include
        layout="@layout/alipay"/>

    <Button
        android:id="@+id/summit"
        android:background="@color/yellow2"
        android:textSize="14sp"
        android:textColor="@color/write"
        android:text="@string/str_preserved"
        android:layout_margin="@dimen/dimen_60dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_135dp" />
    </LinearLayout>
</LinearLayout>