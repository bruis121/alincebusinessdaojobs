<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/write"
    android:layout_height="wrap_content">
   <TextView
       android:background="@color/hui6"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dimen_6dp" />
   <RelativeLayout
       android:paddingBottom="@dimen/dimen_30dp"
       android:paddingTop="@dimen/dimen_30dp"
       android:paddingLeft="@dimen/dimen_30dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/txtsize_42sp"
        android:textColor="@color/black"
        style="@style/text"
        android:id="@+id/name" />

       <TextView
           android:layout_marginTop="@dimen/dimen_15dp"
           android:textColor="@color/hui2"
           android:textSize="@dimen/txtsize_36sp"
          style="@style/text"
           android:layout_below="@id/name"
           android:layout_alignParentStart="true"
           android:id="@+id/tx_time" />
       <TextView
           android:textColor="@color/hui2"
           android:layout_marginTop="@dimen/dimen_15dp"
           android:textSize="@dimen/txtsize_36sp"
           android:maxLines="1"
           android:ellipsize="end"
           android:id="@+id/tx_investmentarea"
           android:layout_below="@id/tx_time"
          style="@style/text" />


       <LinearLayout
           android:layout_above="@+id/tx_investmentarea"
           android:layout_centerHorizontal="true"
           android:orientation="horizontal"
          style="@style/text">
       <TextView
           android:layout_marginLeft="@dimen/dimen_30dp"
           android:textColor="@color/hui2"
           android:textSize="@dimen/txtsize_36sp"
           android:text="@string/tx_use"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            />
           <TextView
               android:id="@+id/tx_number"
               android:textSize="@dimen/txtsize_36sp"
               android:layout_marginLeft="@dimen/dimen_15dp"
               android:textColor="@color/blue"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginLeft="@dimen/dimen_15dp"
               android:textSize="@dimen/txtsize_36sp"
               android:text="@string/person"
               android:textColor="@color/hui2"
               style="@style/text" />
       </LinearLayout>
   </RelativeLayout>

    <TextView
        android:background="@color/hui6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
      <TextView
          android:background="@color/hui8"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_15dp" />

</LinearLayout>