<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:orientation="horizontal"
       android:gravity="center_vertical"
       android:background="@color/huis"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dimen_150dp">
       <TextView
           android:layout_marginLeft="@dimen/dimen_90dp"
           android:layout_weight="1"
           android:background="@color/hui6"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
       <TextView
           android:textSize="@dimen/txtsize_48sp"
           android:layout_marginLeft="@dimen/dimen_45dp"
           android:layout_marginRight="@dimen/dimen_45dp"
            android:textColor="@color/hui"
           android:text="@string/account_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_marginRight="@dimen/dimen_90dp"
           android:layout_weight="1"
           android:background="@color/hui6"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
   </LinearLayout>
</LinearLayout>