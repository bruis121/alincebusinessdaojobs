<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
         <ImageView
             android:id="@+id/returns"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/dimen_30dp"
             android:padding="@dimen/dimen_30dp"
             android:src="@mipmap/returns1"
             android:layout_width="@dimen/dimen_120dp"
             android:layout_height="@dimen/dimen_120dp" />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginTop="@dimen/dimen_45dp"
            android:layout_marginBottom="@dimen/dimen_45dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/account_tx"
                android:textSize="@dimen/txtsize_36sp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_home_check"
                android:textColor="@color/blue"
                android:text="@string/account"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_60dp"
                android:paddingRight="@dimen/dimen_60dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/subordinate_tx"
                android:background="@drawable/shape_home_service"
                android:textSize="@dimen/txtsize_36sp"
                android:gravity="center_vertical"
                android:textColor="@color/write"
                android:text="@string/subordinate"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dimen_60dp"
                android:paddingRight="@dimen/dimen_60dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/page"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>